      <div style="margin-left:auto">
        <button class="btn" id="checkoutBtn">Zur Kasse</button>
      </div>
    </div>
  </aside>

  <!-- Checkout Overlay -->
  <div class="overlay" id="overlay" aria-hidden="true">
    <div class="checkout-card" role="dialog" aria-modal="true" aria-labelledby="checkoutTitle">
      <h2 id="checkoutTitle">Checkout</h2>
      <p class="muted">Beachte: Dies ist ein Demo-Checkout. Es werden keine echten Zahlungen verarbeitet.</p>

      <form id="checkoutForm" onsubmit="return false;">
        <div style="display:flex;gap:12px;flex-wrap:wrap;margin-top:12px">
          <div style="flex:1;min-width:240px">
            <label for="name">Voller Name</label>
            <input id="name" required placeholder="Max Mustermann">
          </div>
          <div style="flex:1;min-width:200px">
            <label for="email">E-Mail</label>
            <input id="email" type="email" required placeholder="mail@example.com">
          </div>
        </div>

        <div style="margin-top:12px">
          <label for="address">Lieferadresse</label>
          <input id="address" required placeholder="Straße 12, 1010 Wien">
        </div>

        <div style="display:flex;gap:12px;margin-top:12px;align-items:end;flex-wrap:wrap">
          <div style="flex:1;min-width:160px">
            <label for="city">Ort</label>
            <input id="city" required placeholder="Wien">
          </div>
          <div style="width:130px">
            <label for="zip">PLZ</label>
            <input id="zip" required placeholder="1010">
          </div>
          <div style="width:160px">
            <label for="country">Land</label>
            <select id="country"><option>Österreich</option><option>Deutschland</option><option>Schweiz</option><option>Andere</option></select>
          </div>
        </div>

        <div style="margin-top:16px;display:flex;gap:12px;justify-content:flex-end">
          <button id="cancelCheckout" class="btn secondary" type="button">Abbrechen</button>
          <button id="submitOrder" class="btn" type="button">Kostenpflichtig bestellen</button>
        </div>
      </form>
