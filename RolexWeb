<script>
  // Product data (demo). Bilder frei verwendbar (Unsplash). Du kannst später eigene Bilder einsetzen.
  const PRODUCTS = [
    {
      id: 'AUR-001',
      title: 'Aurelux Heritage 38',
      price: 8990,
      desc: 'Elegant automatik mit poliertem Gehäuse & Saphirglas. 38mm, Lederband.',
      img: 'https://images.unsplash.com/photo-1519741494786-1c9165d9b8d6?auto=format&fit=crop&w=900&q=80'
    },
    {
      id: 'AUR-002',
      title: 'Aurelux Regent Chrono',
      price: 12500,
      desc: 'Chronograph mit feinem mechanischen Werk, 42mm, schwarze Keramik-Lünette.',
      img: 'https://images.unsplash.com/photo-1522312346375-d1a52e2b99b3?auto=format&fit=crop&w=900&q=80'
    },
    {
      id: 'AUR-003',
      title: 'Aurelux Midnight Sport',
      price: 6690,
      desc: 'Sportlich-elegant, 100m Wasserdicht, robustes Metallband, Sekundenstopp.',
      img: 'https://images.unsplash.com/photo-1549880338-65ddcdfd017b?auto=format&fit=crop&w=900&q=80'
    },
    {
      id: 'AUR-004',
      title: 'Aurelux Classic Gold',
      price: 18900,
      desc: 'Luxuriöses Goldgehäuse, Guillochiertes Zifferblatt, limitierte Auflage.',
      img: 'https://images.unsplash.com/photo-1543163521-1bf539c55c7b?auto=format&fit=crop&w=900&q=80'
    },
    {
      id: 'AUR-005',
      title: 'Aurelux Explorer',
      price: 7490,
      desc: 'Reduziert & robust, ideale Reiseuhr mit GMT-Funktion.',
      img: 'https://images.unsplash.com/photo-1539883374797-5b4b1b3f9c3c?auto=format&fit=crop&w=900&q=80'
    },
    {
      id: 'AUR-006',
      title: 'Aurelux Atelier Tourbillon',
      price: 54900,
      desc: 'Meisterwerk: Tourbillon, handveredelte Brücken, skelettiertes Werk.',
      img: 'https://images.unsplash.com/photo-1490367532201-b9bc1dc483f6?auto=format&fit=crop&w=900&q=80'
    }
  ];

  // utilities
  const formatPrice = (centsOrEuro) => {
    // INPUT prices are in whole euros above
    return new Intl.NumberFormat('de-DE', { style:'currency', currency:'EUR' }).format(centsOrEuro);
  };

  // render products
  const grid = document.getElementById('productGrid');
  function renderProducts(list = PRODUCTS){
    grid.innerHTML = '';
    list.forEach(p => {
      const card = document.createElement('div');
      card.className = 'product';
      card.innerHTML = `
        <img src="${p.img}" alt="${p.title}">
        <h3>${p.title}</h3>
        <div class="price">${formatPrice(p.price)}</div>
        <div class="desc">${p.desc}</div>
        <div class="meta">
          <button class="btn-sm" data-id="${p.id}" aria-label="Details ${p.title}">Details</button>
          <button class="btn-sm buy" data-add="${p.id}" aria-label="In den Warenkorb ${p.title}">In den Warenkorb</button>
        </div>
      `;
      grid.appendChild(card);
    });
  }
  renderProducts();

  // Cart logic
  let CART = JSON.parse(localStorage.getItem('aurelux_cart') || '[]');

  const cartBtn = document.getElementById('btn-cart');
  const cartDrawer = document.getElementById('cartDrawer');
  const cartList = document.getElementById('cartList');
  const cartCount = document.getElementById('cartCount');
  const cartTotalEl = document.getElementById('cartTotal');
  const closeCart = document.getElementById('closeCart');
  const checkoutBtn = document.getElementById('checkoutBtn');
  const overlay = document.getElementById('overlay');

  function saveCart(){ localStorage.setItem('aurelux_cart', JSON.stringify(CART)); }
  function updateCartDisplay(){
    cartCount.textContent = CART.reduce((s,i)=>s+i.qty,0);
    cartList.innerHTML = '';
    if(CART.length === 0){
      cartList.innerHTML = '<div class="muted" style="padding:18px;text-align:center">Dein Warenkorb ist leer.</div>';
      cartTotalEl.textContent = formatPrice(0);
      return;
    }
    let total = 0;
    CART.forEach(item=>{
      const product = PRODUCTS.find(p=>p.id===item.id);
      const row = document.createElement('div');
      row.className = 'cart-item';
      row.innerHTML = `
        <img src="${product.img}" alt="${product.title}">
        <div class="info">
          <div style="display:flex;justify-content:space-between;align-items:center">
            <div><strong style="font-size:14px">${product.title}</strong><div class="muted" style="font-size:12px">${formatPrice(product.price)}</div></div>
            <div style="text-align:right">
              <div class="qty">
                <button class="btn secondary btn-dec" data-id="${item.id}">−</button>
                <span style="padding:0 8px">${item.qty}</span>
                <button class="btn secondary btn-inc" data-id="${item.id}">+</button>
              </div>
              <div style="margin-top:6px"><button class="btn secondary btn-remove" data-id="${item.id}">Entfernen</button></div>
            </div>
          </div>
        </div>
      `;
      cartList.appendChild(row);
      total += product.price * item.qty;
    });
    cartTotalEl.textContent = formatPrice(total);
  }

  function openCart(){
    cartDrawer.classList.add('open');
    cartDrawer.setAttribute('aria-hidden','false');
    updateCartDisplay();
  }
  function closeCartFn(){
    cartDrawer.classList.remove('open');
    cartDrawer.setAttribute('aria-hidden','true');
  }

  cartBtn.addEventListener('click', openCart);
  closeCart.addEventListener('click', closeCartFn);

  // add to cart
  document.body.addEventListener('click', (e)=>{
    const add = e.target.closest('[data-add]');
    if(add){
      const id = add.getAttribute('data-add');
      const exists = CART.find(i=>i.id===id);
      if(exists) exists.qty++;
      else CART.push({ id, qty: 1 });
      saveCart();
      updateCartDisplay();
      openCart();
      return;
    }
    const dec = e.target.closest('.btn-dec');
    if(dec){
      const id = dec.getAttribute('data-id');
      const item = CART.find(i=>i.id===id);
      if(item){
        item.qty = Math.max(0, item.qty - 1);
        if(item.qty === 0) CART = CART.filter(i=>i.id!==id);
        saveCart(); updateCartDisplay();
      }
      return;
    }
    const inc = e.target.closest('.btn-inc');
    if(inc){
      const id = inc.getAttribute('data-id');
      const item = CART.find(i=>i.id===id);
      if(item){ item.qty++; saveCart(); updateCartDisplay(); }
      return;
    }
    const rem = e.target.closest('.btn-remove');
    if(rem){
      const id = rem.getAttribute('data-id');
      CART = CART.filter(i=>i.id!==id);
      saveCart(); updateCartDisplay();
      return;
    }
  });

  // checkout flow
  checkoutBtn.addEventListener('click', ()=>{
    if(CART.length === 0) { alert('Warenkorb ist leer.'); return; }
    overlay.style.display = 'flex';
    overlay.setAttribute('aria-hidden','false');
  });
  document.getElementById('cancelCheckout').addEventListener('click', ()=>{
    overlay.style.display = 'none';
    overlay.setAttribute('aria-hidden','true');
  });

  document.getElementById('submitOrder').addEventListener('click', ()=>{
    // simple validation
    const name = document.getElementById('name').value.trim();
    const email = document.getElementById('email').value.trim();
    const address = document.getElementById('address').value.trim();
    if(!name || !email || !address){ alert('Bitte fülle Name, E-Mail und Adresse aus.'); return; }

    // "process" the order (demo)
    const order = {
      id: 'AX' + Date.now(),
      date: new Date().toLocaleString(),
      items: CART,
      total: CART.reduce((s,i)=>(s + (PRODUCTS.find(p=>p.id===i.id).price * i.qty)),0),
      customer: { name, email, address }
    };

    // clear cart
    CART = [];
    saveCart();
    updateCartDisplay();
    overlay.style.display = 'none';
    overlay.setAttribute('aria-hidden','true');
    closeCartFn();

    // show confirmation (simple)
    setTimeout(()=> {
      alert('Danke für deine Bestellung! Bestellnummer: ' + order.id + '\n(Bei diesem Demo-Shop werden keine echten Zahlungen verarbeitet.)');
    }, 300);
  });

  // search filter
  document.getElementById('searchInput').addEventListener('input', (e)=>{
    const q = e.target.value.trim().toLowerCase();
    if(!q){ renderProducts(); return; }
    const filtered = PRODUCTS.filter(p => (p.title + ' ' + p.desc).toLowerCase().includes(q));
    renderProducts(filtered);
  });

  // shop all button scroll
  document.getElementById('shopAllBtn').addEventListener('click', ()=> {
    window.scrollTo({ top: document.getElementById('productGrid').offsetTop - 20, behavior:'smooth' });
  });

  // init
  document.getElementById('year').textContent = new Date().getFullYear();
  updateCartDisplay();

  // Accessibility: close overlay with ESC
  document.addEventListener('keydown', (e)=>{
    if(e.key === 'Escape'){
      overlay.style.display='none';
      overlay.setAttribute('aria-hidden','true');
      closeCartFn();
    }
  });

  // Progressive enhancements: prefer-reduced-motion
  if(window.matchMedia('(prefers-reduced-motion: reduce)').matches){
    document.querySelectorAll('*').forEach(el => { el.style.transition = 'none'; });
  }
</script>
</body>
</html>
