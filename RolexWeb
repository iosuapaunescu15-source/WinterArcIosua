  .product .meta{ display:flex; justify-content:space-between; align-items:center; gap:10px; }
  .product .meta .btn-sm { padding:8px 10px; border-radius:8px; cursor:pointer; border:none; background:rgba(255,255,255,0.02); color:var(--accent); font-weight:600; }
  .product .meta .btn-sm.buy{ background: linear-gradient(180deg, rgba(201,162,74,0.12), rgba(201,162,74,0.06)); color:var(--gold); border:1px solid rgba(201,162,74,0.15); }

  /* Cart Drawer */
  .cart-drawer{
    position: fixed;
    right: 18px;
    bottom: 18px;
    width: 360px;
    max-width: calc(100% - 36px);
    background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
    border-radius:14px;
    box-shadow: 0 30px 70px rgba(0,0,0,0.6);
    border:1px solid rgba(255,255,255,0.04);
    overflow:hidden;
    transform: translateY(30px) scale(0.98);
    opacity:0;
    visibility:hidden;
    transition: all .25s ease;
    z-index:100000;
  }
  .cart-drawer.open{ transform: translateY(0) scale(1); opacity:1; visibility:visible; }
  .cart-header{ padding:14px 16px; display:flex; justify-content:space-between; align-items:center; border-bottom:1px solid rgba(255,255,255,0.03); }
  .cart-list{ max-height:360px; overflow:auto; padding:12px 16px; }
  .cart-item{ display:flex; gap:12px; align-items:center; padding:10px 0; border-bottom:1px dashed rgba(255,255,255,0.02); }
  .cart-item img{ width:62px; height:62px; object-fit:cover; border-radius:8px; }
  .cart-item .info{ flex:1 }
  .cart-item .qty{ display:flex; gap:6px; align-items:center; }
  .cart-footer{ padding:12px 16px; border-top:1px solid rgba(255,255,255,0.03); display:flex; justify-content:space-between; align-items:center; gap:10px; }
  .total{ font-weight:700; color:var(--gold); }

  /* Checkout modal */
  .overlay {
    position: fixed; inset:0; background: rgba(0,0,0,0.6); display:none; align-items:center; justify-content:center; z-index:100001;
  }
  .checkout-card{
    width:100%; max-width:720px; background: linear-gradient(180deg, rgba(255,255,255,0.02), rgba(255,255,255,0.01));
    border-radius: 12px; padding:18px; color:var(--accent);
  }
  .grid-2{ display:grid; grid-template-columns:1fr 1fr; gap:12px; }
  label{ font-size:13px; color:var(--muted); display:block; margin-bottom:6px; }
  input, select, textarea{
    width:100%; padding:10px; border-radius:8px; border:1px solid rgba(255,255,255,0.04); background:transparent; color:var(--accent);
    outline:none; font-size:14px;
  }
